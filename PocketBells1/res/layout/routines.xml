<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogo" >

    <Button
        android:id="@+id/rmbeginnerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Beginner" />

    <Button
        android:id="@+id/rmintermediatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rmbeginnerbutton"
        android:layout_marginTop="16dp"
        android:text="Intermediate" />

    <Button
        android:id="@+id/rmadvancedbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rmintermediatebutton"
        android:layout_marginTop="16dp"
        android:text="Advanced" />

    <Button
        android:id="@+id/rmsavedroutinebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rmadvancedbutton"
        android:layout_marginTop="16dp"
        android:text="My Saved Routine" />

    <Button
        android:id="@+id/rmchoosebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rmsavedroutinebutton"
        android:layout_marginTop="16dp"
        android:text="Choose Your Own" />

</RelativeLayout>