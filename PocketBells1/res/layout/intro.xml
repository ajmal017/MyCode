<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/introImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textColor="#cc0000"
        android:gravity="center"
        android:text="Warning! 
        This App is designed as a supplement to normal kettlebells training!!
        Performing any of the routines displayed in this app without proper qualified instruction can lead to grievous bodily injury!!" />

</RelativeLayout>
